<?import javafx.scene.layout.HBox?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1">
   <center>
      <TextArea id="oneOnOneArea" prefHeight="200.0" wrapText="true" editable="flase" prefWidth="300.0" BorderPane.alignment="CENTER" />
   </center>
   <bottom>
      <HBox spacing="5.0" BorderPane.alignment="CENTER">
         <children>
            <TextField id="message" maxWidth="1.7976931348623157E308" HBox.hgrow="ALWAYS" />
            <Button id="btnSend" mnemonicParsing="false" text="발사!" />
         </children>
         <padding>
            <Insets bottom="1.0" left="1.0" right="1.0" top="1.0" />
         </padding>
      </HBox>
   </bottom>
</BorderPane>
